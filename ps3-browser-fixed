<script type="text/javascript">
    // PS3 COMPATIBLE JAVASCRIPT (ES3)
    
    function go() {
        var url = document.getElementById('url').value;
        if (url.indexOf('http://') !== 0 && url.indexOf('https://') !== 0) {
            url = 'http://' + url;
        }
        // FORCE HTTP untuk PS3
        url = url.replace('https://', 'http://');
        document.getElementById('frame').src = url;
    }
    
    function goto(url) {
        document.getElementById('url').value = url;
        go();
    }
    
    function send() {
        var input = document.getElementById('msg');
        var text = input.value;
        if (!text) return;
        
        var chat = document.getElementById('chat');
        
        // User message
        var userDiv = document.createElement('div');
        userDiv.className = 'msg user';
        userDiv.appendChild(document.createTextNode(text));
        chat.appendChild(userDiv);
        
        input.value = '';
        
        // Simple AI response
        setTimeout(function() {
            var aiDiv = document.createElement('div');
            aiDiv.className = 'msg ai';
            var response = getResponse(text.toLowerCase());
            aiDiv.appendChild(document.createTextNode(response));
            chat.appendChild(aiDiv);
            chat.scrollTop = chat.scrollHeight;
        }, 500);
    }
    
    function getResponse(text) {
        if (text.indexOf('halo') !== -1) return 'Halo! Ada yang bisa saya bantu?';
        if (text.indexOf('waktu') !== -1) {
            var d = new Date();
            return 'Sekarang: ' + d.getHours() + ':' + d.getMinutes();
        }
        if (text.indexOf('tanggal') !== -1) {
            var d = new Date();
            return 'Tanggal: ' + d.toDateString();
        }
        if (text.indexOf('ps3') !== -1) return 'PS3 adalah konsol legendaris dengan Cell Processor!';
        if (text.indexOf('help') !== -1) return 'Commands: halo, waktu, tanggal, ps3';
        return 'Maaf, saya tidak mengerti. Coba: waktu, tanggal, ps3';
    }
    
    // Enter key support
    document.getElementById('msg').onkeypress = function(e) {
        if (e.keyCode === 13) send();
    };
</script>

